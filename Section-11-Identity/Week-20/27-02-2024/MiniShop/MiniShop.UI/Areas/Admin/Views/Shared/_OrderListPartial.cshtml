@model List<AdminOrderViewModel>

    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate</td>
            <td>@order.UserName</td>
            <td>@($"{order.TotalPrice:C0}")</td>
            <td>
            <div class="custom-control custom-switch">
                <input onchange="changeStatus(this,@order.Id);" type="checkbox"
                class="custom-control-input" 
                name="orderState"
                @
                id="customSwitch1">

                <label class="custom-control-label" for="customSwitch1">@order.OrderState</label>
            </div>
           
            </td>
        </tr>
    }

@model List<AdminOrderViewModel>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Sipariş Takipi</h1>
                </div><!-- /.col -->
              l -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="col-12">
            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="myDataTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tarih</th>
                                <th>Kullanıcı</th>
                                <th>Tutar</th>
                                <th>Durum</th>
                                <th width="55">#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>@order.Id</td>
                                    <td>@order.OrderDate</td>
                                    <td>@order.UserName</td>
                                    <td>@($"{order.TotalPrice:C0}")</td>
                                    <td>@order.OrderState</td>
                                    <td>
                                        Burası boş klamsın 
                                    </td>
                                    
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
            </div>
            <!-- /.row -->
            <!-- Orders -->


            <div class="row">
                <div class="col-lg-6 col-3">
                    <div class="card">
                        <div class="card-header border-0">
                            <h3 class="card-title">Son Siparişler</h3>
                            <div class="card-tools">
                                <a asp-area="Admin"
                                   asp-controller="Order"
                                   asp-action="Index"
                                   class="card-title">Tüm Siparişler</a>
                            </div>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-valign-middle">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tarih</th>
                                        <th>Üye</th>
                                        <th>Tutar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.Id</td>
                                            <td>@order.OrderDate</td>
                                            <td>@order.UserName</td>
                                            <td>@($"{order.TotalPrice:C0}")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


            <!-- /Orders -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Styles{
    @await Html.PartialAsync("_DataTablesCssPartial")
}

@section Scripts{
    @await Html.PartialAsync("_DataTablesJsPartial")
}
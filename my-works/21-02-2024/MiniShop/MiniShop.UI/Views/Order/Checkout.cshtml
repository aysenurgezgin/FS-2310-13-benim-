@model OrderViewModel
<!-- Checkout Section Begin -->
<section class="checkout spad pt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="display-4 text-primary text-center">
                    ÖDEME SAYFASI
                </h1>
            </div>
        </div>
        <hr />
        <form 
            asp-area=""
            asp
            class="checkout__form">
            <div class="row">
                <div class="col-lg-8">
                    <h5>Fatura Bilgileri</h5>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Ad: <span>*</span></p>
                                <input asp-for="FirstName">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Soyad: <span>*</span></p>
                                <input asp-for="LastName">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Adres: <span>*</span></p>
                                <input asp-for="Address">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Şehir: <span>*</span></p>
                                <input asp-for="City">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Email: <span>*</span></p>
                                <input asp-for="Email">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Telefon: <span>*</span></p>
                                <input asp-for="PhoneNumber">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Not: <span>*</span></p>
                                <input asp-for="Note">
                            </div>
                        </div>
                    </div>

                    <h5>Ödeme Bilgileri</h5>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Kart Sahibinin Adı Soyadı: <span>*</span></p>
                                <input asp-for="CardName">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="checkout__form__input">
                                <p>Kart Numarası: <span>*</span></p>
                                <input asp-for="CardNumber">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="checkout__form__input">
                                <p>Geçerlilik Tarihi Ay: <span>*</span></p>
                                <input asp-for="ExpirationMonth">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="checkout__form__input">
                                <p>Geçerlilik Tarihi Yıl: <span>*</span></p>
                                <input asp-for="ExpirationYear">
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="checkout__form__input">
                                <p>Cvc Güvenlik Kodu: <span>*</span></p>
                                <input asp-for="Cvc">
                            </div>
                        </div>
                    </div>
                </div>




                <div class="col-lg-4">
                    <div class="checkout__order">
                        <h5>Your order</h5>
                        <div class="checkout__order__product">
                            <ul>
                                <li>
                                    <span class="top__text">Product</span>
                                    <span class="top__text__right">Total</span>
                                </li>
                                <li>01. Chain buck bag <span>$ 300.0</span></li>
                                <li>02. Zip-pockets pebbled<br /> tote briefcase <span>$ 170.0</span></li>
                                <li>03. Black jean <span>$ 170.0</span></li>
                                <li>04. Cotton shirt <span>$ 110.0</span></li>
                            </ul>
                        </div>
                        <div class="checkout__order__total">
                            <ul>
                                <li>Subtotal <span>$ 750.0</span></li>
                                <li>Total <span>$ 750.0</span></li>
                            </ul>
                        </div>
                        <div class="checkout__order__widget">
                            <label for="o-acc">
                                Create an acount?
                                <input type="checkbox" id="o-acc">
                                <span class="checkmark"></span>
                            </label>
                            <p>
                                Create am acount by entering the information below. If you are a returing customer
                                login at the top of the page.
                            </p>
                            <label for="check-payment">
                                Cheque payment
                                <input type="checkbox" id="check-payment">
                                <span class="checkmark"></span>
                            </label>
                            <label for="paypal">
                                PayPal
                                <input type="checkbox" id="paypal">
                                <span class="checkmark"></span>
                            </label>
                        </div>
                        <button type="submit" class="site-btn">Place oder</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->